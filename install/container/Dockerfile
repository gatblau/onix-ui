# Builds the Onix UI image

FROM node:alpine
MAINTAINER Gatblau <onix@gatblau.org>
WORKDIR ./
ARG DEPENDENCY=tmp
COPY ${DEPENDENCY}/package*.json ./
COPY ${DEPENDENCY}/*.js ./
COPY ${DEPENDENCY}/LICENSE.md ./
RUN npm install
# for production
# RUN npm ci --only=production
EXPOSE 8080
USER 20
CMD [ "npm", "start" ]